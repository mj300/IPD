{
  "compilerOptions": {
    "outDir": "./build/development/src",
    "rootDirs": [ "src" ],
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2018",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "removeComments": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "keyofStringsOnly": false,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}